package Programa;

import java.util.Calendar;
import java.util.GregorianCalendar;

public class Main {
	public static void main(String [] args) {
		System.out.println(dateTransactions(31, 2, 2022));
	}
	
	public static String dateTransactions(int dia, int mes, int año) {
		
		Calendar calendar= Calendar.getInstance();
		calendar.set(año, mes, dia);
		GregorianCalendar cal1= new GregorianCalendar(año, mes, dia);
		return cal1.get(Calendar.DAY_OF_MONTH) +" " +  cal1.get(Calendar.MONTH) + " " + cal1.get(Calendar.YEAR);
	}
}
